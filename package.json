{
  "name": "Unelma_Browser",
  "version": "3.1.4",
  "description": "Unelma Browser - a browser for free world ",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-builder -p never",
    "make": "electron-forge make",
    "dist": "electron-builder --win",
    "pack": "electron-builder -mwl",
    "publish": "electron-builder --mac --win --linux -p always"
  },
  "repository": "https://github.com/unelmacoin/unelma-browser",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "files": [
    "package.json",
    "app/**/*",
    "node_modules"
  ],
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "com.unelmas.browser",
    "afterSign": "./build/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "linux": {
      "category": "public.app-category.productivity",
      "target": "AppImage"
    },
    "productName": "Unelma Browser",
    "icon": "./src/img/unp.png",
    "target": "nsis",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "oneClick": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "unelmacoin",
        "repo": "unelma-browser"
      }
    ]
  },
  "author": "Unelma Platforms Inc.",
  "license": "Apache 2.0",
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@cliqz/adblocker-electron": "^1.26.6",
    "@cliqz/adblocker-electron-preload": "^1.26.6",
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "@electron-forge/plugin-webpack": "^6.4.1",
    "@electron-forge/publisher-github": "^6.2.1",
    "@electron/notarize": "^2.2.0",
    "@electron/osx-sign": "^1.0.4",
    "@vercel/webpack-asset-relocator-loader": "^1.7.2",
    "abp-filter-parser": "^0.2.0",
    "babel-loader": "^8.2.5",
    "cross-fetch": "^3.1.5",
    "crypto-js": "^4.1.1",
    "css-loader": "^6.7.1",
    "dateformat": "^5.0.3",
    "dotenv": "^16.0.1",
    "electron": "^v27.1.2",
    "electron-builder": "^23.1.0",
    "electron-context-menu": "^3.3.0",
    "electron-log": "^5.0.0-beta.24",
    "electron-notarize": "^1.2.2",
    "electron-packager": "^17.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.2",
    "electron-updater": "^6.1.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^5.2.0",
    "smalltalk": "^4.1.1",
    "style-loader": "^3.3.1",
    "uniqid": "^5.4.0",
    "update-electron-app": "^3.0.0",
    "url-loader": "^4.1.1",
    "use-memo-one": "^1.1.3",
    "dmg-license": "^1.0.11",
    "v8-compile-cache": "^2.3.0"
  },
  "config": {
    "make_targets": {
      "win32": [
        "nsis"
      ],
      "darwin": [
        "zip",
        "dmg"
      ],
      "linux": [
        "deb",
        "rpm",
        "flatpak",
        "snap"
      ]
    },
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "unelmacoin",
              "name": "unelma-browser"
            },
            "prerelease": false,
            "draft": false
          }
        }
      ],
      "packagerConfig": {
        "icon": "./src/img/unp.icns",
        "osxSign": {
          "identity": "Developer ID Application: Unelma Platforms (FH2G87N2CD)"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Unelma_Browser"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "devContentSecurityPolicy": "default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "unelma_browser",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }
}
