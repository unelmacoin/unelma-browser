{
  "name": "Unelma-Browser",
  "version": "2.0.1",
  "description": "A simple and basic Unelma - Browser",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "electron-builder --win",
    "pack": "electron-builder -mwl"
  },
  "files": [
    "package.json",
    "app/**/*",
    "node_modules"
  ],
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "xyz.unelma.browser",
    "productName": "Unelma Browser",
    "icon": "./src/img/unp.png",
    "target": "nsis",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "author": "Unelma Platforms Inc.",
  "license": "Apache 2.0",
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.23.8",
    "@cliqz/adblocker-electron-preload": "^1.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.64",
    "@vercel/webpack-asset-relocator-loader": "^1.7.2",
    "babel-loader": "^8.2.5",
    "cross-fetch": "^3.1.5",
    "crypto-js": "^4.1.1",
    "css-loader": "^6.7.1",
    "dateformat": "^5.0.3",
    "dotenv": "^16.0.1",
    "electron": "^19.0.0",
    "electron-builder": "^23.1.0",
    "electron-context-menu": "^3.3.0",
    "electron-notarize": "^1.2.1",
    "electron-packager": "^15.5.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.2",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-icons": "^4.4.0",
    "react-router-dom": "^5.2.0",
    "style-loader": "^3.3.1",
    "uniqid": "^5.4.0",
    "url-loader": "^4.1.1"
  },
  "config": {
    "make_targets": {
      "win32": [
        "nsis"
      ],
      "darwin": [
        "zip",
        "dmg"
      ],
      "linux": [
        "deb",
        "rpm",
        "flatpak",
        "snap"
      ]
    },
    "forge": {
      "packagerConfig": {
        "icon": "./src/img/unp.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Unelma_Browser"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "unelma_browser",
                  "preload": {
                    "js": "./src/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
